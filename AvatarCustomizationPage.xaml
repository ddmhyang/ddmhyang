<UserControl x:Class="WorkPartner.AvatarCustomizationPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WorkPartner"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900"
             Background="White">
    <UserControl.Resources>
        <!-- Converter to invert a boolean for Visibility -->
        <local:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>

        <!-- Converter for equipped items visibility -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <local:ColorToBrushConverter x:Key="ColorToBrushConverter"/>

        <!-- Item Button Style -->
        <Style x:Key="ItemButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="120"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Background" Value="#F5F5F5"/>
            <Setter Property="BorderBrush" Value="LightGray"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" CornerRadius="5" Padding="5">
                            <Grid>
                                <!-- Item visual content -->
                                <StackPanel VerticalAlignment="Center">
                                    <Image Source="{Binding ImagePath}" Width="60" Height="60" Margin="0,0,0,5"/>
                                    <TextBlock Text="{Binding Name}" HorizontalAlignment="Center" TextWrapping="Wrap" TextAlignment="Center" FontSize="11" FontWeight="Bold"/>
                                    <!-- Price shown only if not owned -->
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,0" Visibility="{Binding IsOwned, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                                        <TextBlock Text="💰" VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding Price}" Margin="5,0,0,0" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </StackPanel>
                                <!-- Lock icon overlay for unowned items -->
                                <Grid x:Name="Overlay" Background="#80333333" CornerRadius="5" Visibility="{Binding IsOwned, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                                    <TextBlock Text="🔒" FontSize="32" VerticalAlignment="Top" HorizontalAlignment="Right" Foreground="White" Opacity="0.8" Margin="5"/>
                                </Grid>
                                <!-- Highlight for equipped items -->
                                <Border x:Name="EquippedIndicator" BorderBrush="Gold" BorderThickness="3" CornerRadius="5" Visibility="{Binding IsEquipped, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="DodgerBlue"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Color Button Style -->
        <Style TargetType="Button" x:Key="ColorButtonStyle">
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="ToolTip" Value="{Binding Name, Mode=OneWay}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" BorderBrush="Gray" BorderThickness="1" Background="{Binding ColorValue, Converter={StaticResource ColorToBrushConverter}}" CornerRadius="20">
                            <Grid>
                                <!-- Equipped indicator -->
                                <Ellipse Stroke="DarkBlue" StrokeThickness="3" Visibility="{Binding IsEquipped, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="DodgerBlue"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="270"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel: Character Info & Preview -->
        <Border Grid.Column="0" BorderBrush="#E0E0E0" BorderThickness="0,0,1,0" Padding="15">
            <StackPanel>
                <TextBlock Text="아바타 꾸미기" FontSize="20" FontWeight="Bold" Margin="0,0,0,10" HorizontalAlignment="Center"/>
                <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Padding="10" Background="#F0F0F0">
                    <local:CharacterDisplay x:Name="CharacterPreviewControl" Height="250"/>
                </Border>
                <TextBlock x:Name="UsernameTextBlock" Text="Username" FontSize="18" FontWeight="SemiBold" HorizontalAlignment="Center" Margin="0,15,0,5"/>
                <TextBlock x:Name="LevelTextBlock" Text="Level: 1" HorizontalAlignment="Center" Margin="0,0,0,5" FontSize="14" Foreground="Gray"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                    <TextBlock Text="💰" FontSize="16" VerticalAlignment="Center"/>
                    <TextBlock x:Name="CoinsTextBlock" Text="0" FontSize="16" VerticalAlignment="Center" Margin="5,0,0,0"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Right Panel: Shop & Wardrobe Tabs -->
        <Grid Grid.Column="1" Margin="10,0,0,0">
            <TabControl x:Name="CategoryTabControl" Margin="0,10,0,0" SelectionChanged="CategoryTabControl_SelectionChanged">
                <TabControl.Resources>
                    <Style TargetType="TabItem">
                        <Setter Property="Padding" Value="10,5"/>
                        <Setter Property="FontSize" Value="14"/>
                    </Style>
                </TabControl.Resources>
                <!-- Tabs are generated dynamically in code-behind -->
            </TabControl>
        </Grid>
    </Grid>
</UserControl>

