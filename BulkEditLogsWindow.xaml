<Window x:Class="WorkPartner.BulkEditLogsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WorkPartner"
        mc:Ignorable="d"
        Title="Bulk Edit Logs" Height="200" Width="350"
        WindowStartupLocation="CenterOwner" SizeToContent="Height">
    <StackPanel Margin="15">
        <TextBlock x:Name="InfoTextBlock" Text="0 records selected." Margin="0,0,0,10" FontWeight="Bold"/>
        <TextBlock Text="Change task for all selected records:" Margin="0,0,0,5"/>
        <ComboBox x:Name="TaskComboBox" DisplayMemberPath="Text"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Change Task" x:Name="ChangeTaskButton" Click="ChangeTaskButton_Click" Width="100" IsDefault="True"/>
            <Button Content="Delete All" x:Name="DeleteButton" Click="DeleteButton_Click" Width="80" Background="#d9534f" Foreground="White" Margin="10,0"/>
            <Button Content="Cancel" IsCancel="True" Width="75"/>
        </StackPanel>
    </StackPanel>
</Window>

    