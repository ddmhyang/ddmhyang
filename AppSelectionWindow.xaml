<Window x:Class="WorkPartner.AppSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="실행 중인 앱 선택" Height="450" Width="350"
        WindowStartupLocation="CenterOwner" WindowStyle="ToolWindow">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="목록에서 추가할 프로그램을 선택하세요." Margin="0,0,0,10"/>

        <ListBox x:Name="AppListBox" Grid.Row="1" 
                 MouseDoubleClick="AppListBox_MouseDoubleClick"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="확인" Width="80" IsDefault="True" Click="OkButton_Click" Margin="0,0,10,0"/>
            <Button Content="취소" Width="80" IsCancel="True" />
        </StackPanel>
    </Grid>
</Window>