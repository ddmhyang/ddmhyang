<Window x:Class="WorkPartner.ColorPickerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="색상 선택" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterOwner"
        WindowStyle="ToolWindow">
    <StackPanel Margin="15">
        <TextBlock Text="과목 색상을 선택하세요:" Margin="0,0,0,10"/>
        <xctk:ColorPicker x:Name="MyColorPicker" 
                          DisplayColorAndName="True" 
                          ShowAvailableColors="True" 
                          ShowStandardColors="True"
                          SelectedColorChanged="MyColorPicker_SelectedColorChanged"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="확인" IsDefault="True" Click="OkButton_Click" Width="75" Margin="0,0,10,0"/>
            <Button Content="취소" IsCancel="True" Width="75"/>
        </StackPanel>
    </StackPanel>
</Window>
