<Window x:Class="WorkPartner.DateEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="날짜 변경" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterOwner" WindowStyle="ToolWindow">
    <StackPanel Margin="15">
        <TextBlock Text="할 일의 날짜를 변경하세요:" Margin="0,0,0,10"/>
        <Calendar x:Name="DatePicker"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="확인" IsDefault="True" Click="OkButton_Click" Width="75" Margin="0,0,10,0"/>
            <Button Content="취소" IsCancel="True" Width="75"/>
        </StackPanel>
    </StackPanel>
</Window>
